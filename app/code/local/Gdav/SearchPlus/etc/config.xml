<?xml version="1.0" encoding="UTF-8"?>
<config>
    <!-- SearchPlus -->
   <modules>
       <Gdav_SearchPlus>
           <version>1.2.0</version>
       </Gdav_SearchPlus>
   </modules>
   <global>
        <helpers>
            <searchplus>
                <class>Gdav_SearchPlus_Helper</class>
            </searchplus>
        </helpers>
        <models>
            <searchplus>
                <class>Gdav_SearchPlus_Model</class>
                <resourceModel>searchplus_mysql4</resourceModel>
            </searchplus>
            <searchplus_mysql4>
                <class>Gdav_SearchPlus_Model_Mysql4</class>
            </searchplus_mysql4>
        </models>
        <resources>
            <searchplus_setup>
                <setup>
                    <module>Gdav_SearchPlus</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </searchplus_setup>
            <searchplus_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </searchplus_write>
            <searchplus_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </searchplus_read>
        </resources>
    </global> 
    <default>
        <search_plus>
            <general>
                <enabled>0</enabled>
				<minchars>3</minchars>
				<maxheight>300</maxheight>
				<width>300</width>
				<searchfieldtext>Buscar em toda a loja...</searchfieldtext>
				<productstoshow>10</productstoshow>
				<enableloader>1</enableloader>
				<sortby>name</sortby>
				<sortorder>asc</sortorder>
				<enabledescription>1</enabledescription>
				<descriptionchars>50</descriptionchars>
				<enableimage>1</enableimage>
				<imageheight>50</imageheight>
				<imagewidth>50</imagewidth>
				<enableleft>0</enableleft>
				<enableright>0</enableright>
                <headertext>Mostrar todos os resultados para</headertext>
                <footertext>Mostrar todos os resultados para</footertext>
            </general>
		</search_plus>
    </default> 
    <frontend> 	
        <layout>
            <updates>
                <searchplus>
                    <file>searchplus.xml</file>
                </searchplus>
            </updates>
        </layout>
        <routers>
            <searchplus>
                <use>standard</use>
                <args>
                    <module>Gdav_SearchPlus</module>
                    <frontName>searchplus</frontName>
                </args>
            </searchplus>
        </routers>
        <translate>
            <modules>
                <Gdav_SearchPlus>
                    <files>
                        <default>Gdav_SearchPlus.csv</default>
                    </files>
                </Gdav_SearchPlus>
            </modules>
        </translate>
   </frontend>
   <adminhtml>
        <translate>
            <modules>
                <Gdav_SearchPlus>
                    <files>
                        <default>Gdav_SearchPlus.csv</default>
                    </files>
                </Gdav_SearchPlus>
            </modules>
        </translate>
    </adminhtml>
</config>
